{% extends 'JlbsAdminBundle:Layout:base.html.twig' %}

{% block foot_script %}
    {{ parent() }}

    <script type="text/javascript">

        var oTable = null;
        $(document).ready(function () {
            var url = Routing.generate('admin_user_list');
            oTable = $('#example').dataTable({
                "iDisplayLength":10,
                "aLengthMenu":[
                    [10, 50, 100, 500, -1],
                    [10, 50, 100, 500, "All"]
                ],
                "bProcessing":true,
                "bServerSide":true,
                "bStateSave":true,
                "iCookieDuration":7200,
                "sAjaxSource":url,
                "fnServerData":function (sSource, aoData, fnCallback) {
                    $.ajax({
                        "dataType":'json',
                        "type":"POST",
                        "url":sSource,
                        "data":aoData,
                        "success":function (json) {
                            /* Do whatever additional processing you want on the callback,
                             then tell DataTables */
                            fnCallback(json)
                        } });
                },
                "sServerMethod":"POST",
                "aoColumns":[
                    { "sWidth":"8%"},
                    { "sWidth":"15%"},
                    { "sWidth":"15%"},
                    { "sWidth":"15%"},
                    { "sWidth":"15%"},
                    {},
                    {"sWidth":"260px"},
                    {"sWidth":"8%"},
                    {"bSortable":false, "sWidth":"5%"}
                ],
                "aaSorting":[
                    [0, 'asc']
                ],
                "sPaginationType":"bootstrap",
                "bLengthChange":true,
                "sDom":"<'row-fluid'<'span6'l><'span6'Tf>r>t<'row-fluid'<'span6'i><'span6'p>>",
                "oLanguage":getLocale("es")
            });
        });
    </script>

{% endblock %}

{% block migas %}
    {{ parent() }}
    <li class="active">Gestión de usuarios</li>
{% endblock %}


{% block content %}
    <div class="row-fluid">
        <div class="span2">
            <a style="margin-bottom: 10px;" class="btn btn-primary" href="{{ path('admin_user_new') }}">
                <i class="icon-plus icon-white"></i> Crear nuevo
            </a>
        </div>
    </div>
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
        <thead>
        <tr>
            <th>Usuario</th>
            <th>Email</th>
            <th>Nombre</th>
            <th>P. Nombre</th>
            <th>S. Nombre</th>
            <th>Habilitado</th>
            <th>Último login</th>
            <th>Roles</th>
            <th>Acciones</th>
        </tr>
        </thead>
    </table>
{% endblock %}























